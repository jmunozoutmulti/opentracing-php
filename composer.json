{
    "name": "jcchavezs/opentracing",
    "description": "OpenTracing interfaces for PHP",
    "type": "library",
    "license": "GPLv3",
    "authors": [
        {
            "name": "José Carlos Chávez",
            "email": "jcchavezs@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6||^7.0",
        "jcchavezs/tracing-context": "^0.2.0",
        "psr/http-message": "^1.0",
        "symfony/polyfill-php70": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7.19",
        "guzzlehttp/psr7": "^1.4",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "OpenTracing\\": "./src/OpenTracing/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenTracingTests\\": "./tests/"
        }
    }
}
